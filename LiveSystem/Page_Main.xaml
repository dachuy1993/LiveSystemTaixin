<Page x:Class="LiveSystem.Page_Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LiveSystem"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1100"
      Title="Page_Main">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StyleResourceDictionary.xaml"/>
                <ResourceDictionary Source="Lang\korea.xaml"/>
                <ResourceDictionary Source="Lang\vietnam.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid ScrollViewer.HorizontalScrollBarVisibility="Visible" Background="White" Name="Grid_Full">
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="10*"/>          
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
            <Label Content="{DynamicResource Ngày kiểm tra}" VerticalAlignment="Center"></Label>
            <DatePicker Name="dpk_Check" VerticalContentAlignment="Center" SelectedDateChanged="dpk_Check_SelectedDateChanged"></DatePicker>
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="3" Margin="10,0,0,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
                    <RadioButton Content="{DynamicResource Ca ngày}" Margin="5,0" Name="rb_ShiftA" IsChecked="True" Checked="rb_ShiftA_Checked"></RadioButton>
                    <RadioButton Content="{DynamicResource Ca đêm}" Margin="5,0" Name="rb_ShiftB" Checked="rb_ShiftB_Checked"></RadioButton>
                    <RadioButton Content="{DynamicResource Tất cả}" Margin="5,0" Name="rb_ShiftAll" Checked="rb_ShiftAll_Checked"></RadioButton>
                </StackPanel>
            </Border>
            <Button x:Name="btnTimKiem" Width="100" Margin="10,0" Click="btnTimKiem_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Image/Edit/search.png" Height="20" Width="20"></Image>
                    <Label Content="{DynamicResource Tìm kiếm}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"></Label>
                </StackPanel>
            </Button>
            <Label x:Name="lb"  VerticalAlignment="Center" Visibility="Hidden"></Label>
            <Button x:Name="btnExportExcel" Width="100" Margin="3,0" Visibility="Hidden">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Image/Edit/xls-export.png" Height="20" Width="20"></Image>
                    <Label Content="{DynamicResource Excel}" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"></Label>
                </StackPanel>
            </Button>
        </StackPanel>

        <Grid Grid.Row="2" Grid.ColumnSpan="2" Name="gridMain1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*">
                    
                </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <GroupBox  Header="{DynamicResource Tỷ lệ đi làm}" BorderBrush="Gray" Margin="2" Grid.RowSpan="2">
                <Grid Margin="0,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!--<ColumnDefinition Width="*"/>-->
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="lvWorkingRate" ItemContainerStyle="{StaticResource styleConvertColorRowListView}" AlternationCount="2" GridViewColumnHeader.Click="GridViewColumnHeader_Work" Margin="0,0,0,0">
                        <ListView.View>
                            <GridView>
                                
                                <GridViewColumn Header="{DynamicResource Bộ phận}"  DisplayMemberBinding="{Binding DeptNm}" Width="65"></GridViewColumn>
                                <GridViewColumn Header="{DynamicResource Tổng}"     DisplayMemberBinding="{Binding NumAll}" Width="45"></GridViewColumn>
                                <GridViewColumn Header="{DynamicResource Đi làm}"   DisplayMemberBinding="{Binding Work}" Width="45"></GridViewColumn>
                                <GridViewColumn Header="{DynamicResource Nghỉ}"     DisplayMemberBinding="{Binding Leave}" Width="45"></GridViewColumn>
                                <GridViewColumn Header="{DynamicResource Muộn}"     DisplayMemberBinding="{Binding Late}" Width="45"></GridViewColumn>
                                <GridViewColumn Header="{DynamicResource Tỷ lệ}"    DisplayMemberBinding="{Binding Rate}" Width="45"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <!--<Frame  Grid.Column="1" x:Name="frameChart_Tinh" NavigationUIVisibility="Hidden"></Frame>-->
                </Grid>
            </GroupBox>

            <GroupBox Grid.Column="1" Header="{ DynamicResource Thông tin suất ăn VSIP}" BorderBrush="Gray" Margin="2" Grid.RowSpan="2" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!--<ColumnDefinition Width="*"/>-->
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="lvVSIPMeal" Grid.Column="0" ItemContainerStyle="{StaticResource styleConvertColorRowListView}" AlternationCount="2" GridViewColumnHeader.Click="GridViewColumnHeader_Food">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="{DynamicResource Bộ phận}"  DisplayMemberBinding="{Binding EmpNm}"  Width="70"></GridViewColumn>
                                <GridViewColumn Header="{DynamicResource Sáng}"     DisplayMemberBinding="{Binding Qty_Sang}" Width="55"></GridViewColumn>
                                <GridViewColumn Header="{DynamicResource Trưa}"     DisplayMemberBinding="{Binding Qty_Trua}" Width="55"></GridViewColumn>
                                <GridViewColumn Header="{DynamicResource Chiều}"    DisplayMemberBinding="{Binding Qty_Chieu}"  Width="55"></GridViewColumn>
                                <GridViewColumn Header="{DynamicResource Đêm}"      DisplayMemberBinding="{Binding Qty_Dem}"  Width="55"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <!--<Frame Grid.Column="1" x:Name="frameChart_Food" NavigationUIVisibility="Hidden" Visibility="Visible"></Frame>-->
                </Grid>
            </GroupBox>

            <GroupBox Grid.Column="2" Header="{DynamicResource Tỷ lệ phép năm }" BorderBrush="Gray" Margin="2" Visibility="Visible" Grid.RowSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <!--<ColumnDefinition Width="*"/>-->
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="lvPhepNam" ItemContainerStyle="{StaticResource styleConvertColorRowListView}" AlternationCount="2" GridViewColumnHeader.Click="GridViewColumnHeader_Holiday">
                        <ListView.View>
                            <GridView>                               
                                <GridViewColumn Header="{DynamicResource Bộ phận}"  DisplayMemberBinding="{Binding Division}" Width="72"></GridViewColumn>
                                <GridViewColumn Header="{DynamicResource Tổng}"     DisplayMemberBinding="{Binding Total}" Width="55"></GridViewColumn>
                                <GridViewColumn Header="{DynamicResource Sử dụng}"   DisplayMemberBinding="{Binding Used}" Width="60"></GridViewColumn>
                                <GridViewColumn Header="{DynamicResource Còn lại}"     DisplayMemberBinding="{Binding Remain}" Width="60"></GridViewColumn>
                                <GridViewColumn Header="{DynamicResource Tỷ lệ}"    DisplayMemberBinding="{Binding Rate}" Width="45"></GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <!--<Frame  Grid.Column="1" x:Name="frameChart_Holiday" NavigationUIVisibility="Hidden"></Frame>-->
                </Grid>
            </GroupBox>

            <GroupBox Grid.Column="3" Header="{DynamicResource Tỷ lệ tăng ca }" BorderBrush="Gray" Margin="2" Visibility="Visible" Grid.RowSpan="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="32"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid>                       
                        <Border Background="LightGreen" Margin="2" CornerRadius="3">
                            <Label Grid.Column="0" Name="lb_Month" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"></Label>
                        </Border>                                          
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>                          
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Grid.ColumnSpan="2" Background="LightBlue" Margin="2" CornerRadius="3">
                            <Label Grid.Column="0" Content="{DynamicResource Tỷ lệ tăng ca}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"></Label>
                        </Border>
                        <Border Grid.Column="2" Background="LightBlue" Margin="2" CornerRadius="3">
                            <Label Grid.Column="0" Content="{DynamicResource 40h -> 52h}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"></Label>
                        </Border>
                        <Border  Grid.Column="3" Background="LightBlue" Margin="2" CornerRadius="3">
                            <Label Grid.Column="0" Content="{DynamicResource 52h -> 104h}" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"></Label>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>                           
                        </Grid.ColumnDefinitions>
                        <ListView Grid.Column="0" Grid.ColumnSpan="2" x:Name="lvOverTime" ItemContainerStyle="{StaticResource styleConvertColorRowListView}" AlternationCount="2" GridViewColumnHeader.Click="GridViewColumnHeader_Overtime">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="{DynamicResource Bộ phận}"     DisplayMemberBinding="{Binding DeptNm}" Width="65"></GridViewColumn>
                                    <GridViewColumn Header="{DynamicResource Số người}"    DisplayMemberBinding="{Binding Numper}" Width="65"></GridViewColumn>
                                    <GridViewColumn Header="{DynamicResource Tháng này}"   DisplayMemberBinding="{Binding TotalOT}" Width="65"></GridViewColumn>
                                    <GridViewColumn Header="{DynamicResource Bình quân}"   DisplayMemberBinding="{Binding Rate}" Width="65"></GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <ListView Grid.Column="2" x:Name="lvOverTime3" ItemContainerStyle="{StaticResource styleConvertColorRowListView}" AlternationCount="2" GridViewColumnHeader.Click="GridViewColumnHeader_Overtime">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="{DynamicResource Số người}"    DisplayMemberBinding="{Binding Numper40}" Width="65"></GridViewColumn>
                                    <GridViewColumn Header="{DynamicResource Bình quân}"   DisplayMemberBinding="{Binding RateNumper40}" Width="65"></GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <ListView Grid.Column="3" x:Name="lvOverTime4" ItemContainerStyle="{StaticResource styleConvertColorRowListView}" AlternationCount="2" GridViewColumnHeader.Click="GridViewColumnHeader_Overtime">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="{DynamicResource Số người}"    DisplayMemberBinding="{Binding Numper104}" Width="65"></GridViewColumn>
                                    <GridViewColumn Header="{DynamicResource Bình quân}"   DisplayMemberBinding="{Binding RateNumper104}" Width="65"></GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <ListView Grid.Column="1" x:Name="lvOverTime1" ItemContainerStyle="{StaticResource styleConvertColorRowListView}"  GridViewColumnHeader.Click="GridViewColumnHeader_Overtime" Visibility="Hidden">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="{DynamicResource Số người}"    DisplayMemberBinding="{Binding QtyFood}" Width="65"></GridViewColumn>
                                    <GridViewColumn Header="{DynamicResource Bình quân}"   DisplayMemberBinding="{Binding OtRate}" Width="65"></GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <ListView Grid.Column="2" x:Name="lvOverTime2" ItemContainerStyle="{StaticResource styleConvertColorRowListView}"  GridViewColumnHeader.Click="GridViewColumnHeader_Overtime" Visibility="Hidden">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="{DynamicResource Số người}"    DisplayMemberBinding="{Binding QtyFood}" Width="65"></GridViewColumn>
                                    <GridViewColumn Header="{DynamicResource Bình quân}"   DisplayMemberBinding="{Binding OtRate}" Width="65"></GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        
                        <Frame  Grid.Column="6" x:Name="frameChart_OverTime" NavigationUIVisibility="Hidden"></Frame>
                    </Grid>
                   
                </Grid>
            </GroupBox>
            
            <GroupBox Grid.Column="6"  Header="{DynamicResource Lịch trình hôm nay}" >
                <Grid>
                    <!--<Grid.ColumnDefinitions>
                        --><!--<ColumnDefinition Width="*"/>-->
                        <!--<ColumnDefinition Width="*"/>--><!--
                    </Grid.ColumnDefinitions>
                    <ListView x:Name="lvLichTrinh" ItemContainerStyle="{StaticResource styleConvertColorRowListView}" >-->
                        <!--<ListView.View>
                            <GridView>
                                <GridViewColumn Header="{DynamicResource Lịch trình hôm nay}"  DisplayMemberBinding="{Binding Division}" Width="164"></GridViewColumn>
                                
                            </GridView>
                        </ListView.View>-->
                    <StackPanel Background="Orange" >
                            <TextBlock Name="lb_Note" TextWrapping="WrapWithOverflow" ></TextBlock>
                        </StackPanel>
                    <!--</ListView>-->
                    <!--<Frame  Grid.Column="1" x:Name="frameChart_Holiday" NavigationUIVisibility="Hidden"></Frame>-->
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="1" Grid.Column="6" Header="{DynamicResource Cập nhật địa chỉ}"  Margin="2" BorderBrush="Gray">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical">
                        <Label Content="{DynamicResource OK}"></Label>
                        <Label Content="{DynamicResource NG}"></Label>
                        <Label Content="{DynamicResource Tổng số}"    ></Label>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Vertical">
                        <Label Name="lb_UpdateDiaChi_OK" FontWeight="Bold"></Label>
                        <Label Name="lb_UpdateDiaChi_NG"  FontWeight="Bold" Foreground="Red"></Label>
                        <Label Name="lb_Total"  FontWeight="Bold"></Label>
                    </StackPanel>
                </Grid>
            </GroupBox>
