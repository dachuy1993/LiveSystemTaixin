<Window x:Class="LiveSystem.Window_CheckUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LiveSystem"
        mc:Ignorable="d"
        Title="Kiểm tra phân quyền" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Visibility="Hidden">
            <Button x:Name="rb_In" Content="Taixin" Margin="10,0" Width="70" Height="25"  Click="rb_In_Checked"/>
            <Button x:Name="rb_Out" Content="Etc" Margin="10,0"   Width="70" Click="rb_Out_Checked"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Frame x:Name="frameEmp" NavigationUIVisibility="Hidden"></Frame>
        </Grid>
    </Grid>
</Window>
